{
    "dotnet.defaultSolution": "disable",
    "makefile.configureOnOpen": false,
    "rest-client.enableTelemetry": false,
    "rest-client.environmentVariables": {
        "local": {
          "host": "http://localhost:7999"
        },
        "local-docker": {
          "host": "http://localhost:7999"
        },
        "prod-apim": {
          "host": "https://api.cezzis.com/prd/cocktails/mcp/v1"
        }
    },
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.patterns": {
      "*.go": "$(capture).go.http, $(capture)_test.go"
    },
    "go.toolsEnvVars": {        
      "CGO_LDFLAGS_ALLOW":".*"
    },
    "yaml.schemas": {
        "https://raw.githubusercontent.com/GitTools/GitVersion/main/schemas/6.3/GitVersion.json": "GitVersion.yml"
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true
    }
}